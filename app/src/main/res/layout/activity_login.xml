<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Login">


    <EditText
        android:id="@+id/emailId"
        android:layout_width="194dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="145dp"
        android:layout_marginTop="337dp"
        android:layout_marginEnd="160dp"
        android:hint="@string/exemple_hotmail_fr"
        android:inputType="textEmailAddress"
        android:singleLine="true" />

    <EditText
        android:id="@+id/paswordId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/connexionId"
        android:layout_below="@+id/emailId"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="140dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="156dp"
        android:layout_marginBottom="73dp"
        android:hint="@string/password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/connexionId"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/inscriptionId"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="135dp"
        android:layout_marginEnd="148dp"
        android:layout_marginBottom="39dp"
        android:onClick="signInUser"
        android:text="@string/connexion" />

    <Button
        android:id="@+id/inscriptionId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="111dp"
        android:layout_marginEnd="111dp"
        android:layout_marginBottom="135dp"
        android:onClick="signUpUser"
        android:text="@string/inscription" />


</RelativeLayout>